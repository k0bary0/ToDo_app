<% provide(:title, @task.title) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">


<div class="center jumbotron">
  <h1><%= @task.title %></h1>
  <p><%= @task.description %></p>
</div>

<p><%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary" %></p>
<p><%= link_to "Destroy", task_path(@task), class: "btn btn-primary",
                     data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                     } %></p>

<div><%= link_to "back to list", user_path(current_user) %></div>
